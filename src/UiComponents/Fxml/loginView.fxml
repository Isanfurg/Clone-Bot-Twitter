<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" fx:id="contentPane" maxHeight="600.0" maxWidth="800.0" minHeight="600.0" minWidth="800.0" prefHeight="600.0" prefWidth="800.0" styleClass="BigAnchorPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UiComponents.Controllers.LoginViewController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
   <children>
      <VBox alignment="CENTER" layoutX="150.0" layoutY="50.0" maxHeight="500.0" maxWidth="500.0" minHeight="500.0" minWidth="500.0" prefHeight="500.0" prefWidth="500.0">
         <children>
            <TextField fx:id="pinBox" alignment="CENTER" prefHeight="50.0" promptText="PIN" styleClass="TextBox" stylesheets="@styles.css">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button maxHeight="50.0" maxWidth="230.0" minHeight="50.0" minWidth="230.0" mnemonicParsing="false" onAction="#copiarUrl" prefHeight="50.0" prefWidth="230.0" styleClass="Button" stylesheets="@styles.css" text="CopyUrl">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button maxHeight="50.0" maxWidth="230.0" minHeight="50.0" minWidth="230.0" mnemonicParsing="false" onAction="#login" prefHeight="50.0" prefWidth="230.0" styleClass="Button" stylesheets="@styles.css" text="Login">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
