<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Text?>

<Button minHeight="80.0" minWidth="180.0" mnemonicParsing="false" onAction="#selectUser" prefHeight="80.0" prefWidth="180.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UiComponents.Controllers.UserButtonController">
   <graphic>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" scaleShape="false" spacing="10.0">
         <children>
            <Circle fx:id="profileImg" fill="WHITE" radius="34.0" stroke="BLACK" strokeType="INSIDE" />
            <VBox alignment="CENTER_LEFT" prefHeight="68.0" prefWidth="126.0" scaleShape="false">
               <children>
                  <Text fx:id="username" strokeType="OUTSIDE" strokeWidth="0.0" text="UserName" />
                  <Button mnemonicParsing="false" onAction="#followThisUser" text="Follow">
                     <graphic>
                        <FontAwesomeIconView fx:id="followCheck" glyphName="CIRCLE_ALT" />
                     </graphic>
                  </Button>
               </children>
            </VBox>
         </children>
      </HBox>
   </graphic>
</Button>
